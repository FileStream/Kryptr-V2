<Window x:Class="KryptrGUI.TextOrRecover"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:KryptrGUI"
        mc:Ignorable="d"
        Title="Encrypt text or recover a public key?" Height="201" Width="493.2" ResizeMode="CanMinimize" ShowInTaskbar="False" Topmost="True" WindowStartupLocation="CenterOwner" Background="#FF9C9C9C">
    <Grid>
        <Button x:Name="RecoverButton" Content="Recover a public key" HorizontalAlignment="Left" Margin="44,73,0,0" VerticalAlignment="Top" Width="195" Height="41" FontFamily="Calibri Light" FontSize="22" Click="RecoverClicked"/>
        <Button x:Name="EncryptButton" Content="Encrypt text" Margin="0,73,44,0" VerticalAlignment="Top" Height="41" Width="154" HorizontalAlignment="Right" FontSize="24" FontFamily="Calibri Light" Click="EncryptClicked"/>
        <Label Content="Select the desired operation:" Margin="28,12,28,0" VerticalAlignment="Top" Height="65" Foreground="#FFD30B0B" FontFamily="Calibri" FontSize="36"/>

    </Grid>
</Window>
